{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
<h1>
    {{tag.name|upper}}
</h1>

<div class="container">
    <div class="row">
        {% for row in tag.questions %}
        <div class="col col-6">
            <div class="card border-primary mb-3">
            <div class="card-header"><a href="{{path('tag',{id:row.tag.id})}}">{{row.tag.name|upper}}</a></div>
            <div class="card-body">
                <h4 class="card-title">{{row.createdAt|date("d/m/Y")}}</h4>
                <p class="card-text">{{row.title}}</p>
                <button type="button" class="btn btn-outline-primary float-right">
                    <a href="{{path('show_question',{id:row.id})}}">Voir les r√©ponses</a>
                </button>
            </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
